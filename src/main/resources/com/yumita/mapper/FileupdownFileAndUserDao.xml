<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yumita.dao.FileupdownFileAndUserDao">

    <resultMap type="com.yumita.entity.FileupdownFileAndUser" id="FileupdownFileAndUserMap">
        <result property="ufId" column="uf_id" jdbcType="OTHER"/>
        <result property="fileId" column="file_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FileupdownFileAndUserMap">
        select
          uf_id, file_id, user_id
        from file_updown.fileupdown_file_and_user
        where uf_id = #{ufId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FileupdownFileAndUserMap">
        select
          uf_id, file_id, user_id
        from file_updown.fileupdown_file_and_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="FileupdownFileAndUserMap">
        select
          uf_id, file_id, user_id
        from file_updown.fileupdown_file_and_user
        <where>
            <if test="ufId != null">
                and uf_id = #{ufId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="ufId" useGeneratedKeys="true">
        insert into file_updown.fileupdown_file_and_user(file_id, user_id)
        values (#{fileId}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update file_updown.fileupdown_file_and_user
        <set>
            <if test="fileId != null">
                file_id = #{fileId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where uf_id = #{ufId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from file_updown.fileupdown_file_and_user where uf_id = #{ufId}
    </delete>

</mapper>